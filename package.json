{
  "name": "mosaic",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "up": "http-server -o",
    "build:css": "npm run csscomb && npm run postcss && npm run uglifycss",
    "watch:css": "onchange 'src/css/*.css' -- npm run build:css ",
    "csscomb": "csscomb src/**/*.css",
    "postcss": "postcss src/**/*.css -u autoprefixer -d dist/css",
    "uglifycss": "uglifycss dist/css/*.css --output dist/css/*.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chrfreitas/mosaic.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chrfreitas/mosaic/issues"
  },
  "homepage": "https://github.com/chrfreitas/mosaic#readme",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "csscomb": "^4.2.0",
    "http-server": "^0.10.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^4.1.1",
    "uglifycss": "0.0.27"
  }
}
